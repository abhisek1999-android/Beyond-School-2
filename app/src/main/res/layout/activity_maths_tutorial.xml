<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    tools:context=".TablesActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <include
            android:id="@+id/toolBar"
            layout="@layout/tool_bar_layout_back_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <!--        <TextView-->
        <!--            android:id="@+id/trialPeriodText"-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:layout_marginHorizontal="@dimen/grid_20"-->
        <!--            android:drawableLeft="@drawable/ic_outline_info_24"-->
        <!--            android:drawablePadding="10dp"-->
        <!--            android:fontFamily="@font/reemkufi_medium"-->
        <!--            android:text="You Trial Period is"-->
        <!--            android:textColor="@color/primary"-->
        <!--            android:textSize="@dimen/default_font_size"-->
        <!--            android:visibility="gone" />-->


        <androidx.core.widget.NestedScrollView

            android:id="@+id/nestedScrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/startExeButtonLayout"
            android:layout_below="@id/toolBar">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/noDataFound"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="@dimen/grid_10"
                    android:layout_marginVertical="@dimen/grid_10"
                    android:background="@drawable/tv_shape"
                    android:backgroundTint="@color/accent"
                    android:fontFamily="@font/reemkufi_medium"
                    android:padding="@dimen/grid_10"
                    android:text="We don't have data for the selected grade.\n It will be available soon !!"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/completeProgressTile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <LinearLayout
                        android:id="@+id/taskLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <TextView
                            android:id="@+id/yourTask"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/yourProgressLayout"
                            android:layout_gravity="center"
                            android:layout_marginHorizontal="@dimen/grid_20"
                            android:layout_weight="1"
                            android:fontFamily="@font/reemkufi_medium"
                            android:text="Recent   Table"
                            android:textAllCaps="true"
                            android:textColor="@color/accent"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/grid_20"
                            android:layout_marginTop="@dimen/grid_10"
                            android:fontFamily="@font/reemkufi_medium"
                            android:text="Maths"
                            android:textSize="@dimen/default_font_size_big"
                            android:textStyle="bold" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/mathsRecyclerView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/grid_10" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">


                        <androidx.cardview.widget.CardView
                            android:id="@+id/yourProgressLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/toolBar"
                            android:layout_margin="@dimen/grid_10"
                            app:cardCornerRadius="@dimen/grid_20"
                            app:cardElevation="0dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="5dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:layout_gravity="left"
                                    android:fontFamily="@font/reemkufi_medium"
                                    android:padding="5dp"
                                    android:text="Progress   Report"
                                    android:textAllCaps="true"

                                    android:textColor="@color/accent"
                                    android:textSize="20sp"
                                    android:textStyle="bold" />

                                <androidx.recyclerview.widget.RecyclerView
                                    android:id="@+id/progressRecyclerView"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/grid_10" />

                            </LinearLayout>


                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </LinearLayout>

                <ImageView
                    android:id="@+id/introTile"
                    android:layout_width="match_parent"
                    android:layout_height="480dp"
                    android:src="@drawable/part_one" />

                <RelativeLayout
                    android:id="@+id/evaluationTestTile"
                    android:layout_width="match_parent"
                    android:layout_height="550dp"
                    android:layout_marginHorizontal="5dp"

                    >

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/part_two" />

                    <com.google.android.material.button.MaterialButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginRight="@dimen/grid_20"
                        android:layout_marginBottom="@dimen/grid_20"
                        android:fontFamily="@font/reemkufi_medium"
                        android:text="Proceed  to evaluation test"
                        android:textAllCaps="false"
                        android:visibility="invisible"
                        app:backgroundTint="@color/primary" />
                </RelativeLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/gotoViewCurriculum_one"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/grid_1_5"
                    android:layout_marginTop="@dimen/grid_10"
                    app:cardBackgroundColor="@color/primary"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="0dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/jellee_roman"
                        android:paddingVertical="@dimen/grid_1_5"
                        android:text="View Curriculum"

                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="@dimen/default_font_size_big" />
                </androidx.cardview.widget.CardView>

                <ImageView
                    android:id="@+id/methodologyTile"
                    android:layout_width="match_parent"
                    android:layout_height="640dp"
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginVertical="@dimen/grid_10"
                    android:src="@drawable/part_three" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/gotoViewCurriculum_two"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/grid_1_5"
                    app:cardBackgroundColor="@color/primary"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="0dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/jellee_roman"
                        android:paddingVertical="@dimen/grid_1_5"
                        android:text="View Curriculum"

                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="@dimen/default_font_size_big" />
                </androidx.cardview.widget.CardView>

                <ImageView
                    android:id="@+id/learnTile"
                    android:layout_width="match_parent"
                    android:layout_height="550dp"
                    android:layout_marginHorizontal="5dp"
                    android:src="@drawable/part_four" />


            </LinearLayout>
        </androidx.core.widget.NestedScrollView>


        <LinearLayout
            android:id="@+id/startExeButtonLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="1dp"
            android:background="@color/white"
            android:elevation="@dimen/grid_10"
            android:paddingBottom="@dimen/grid_10"
            android:visibility="gone">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/grid_20"
                android:layout_marginVertical="@dimen/grid_10"
                android:layout_marginTop="@dimen/grid_1_5"
                app:cardBackgroundColor="@color/primary"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/jellee_roman"
                    android:paddingVertical="@dimen/grid_1_5"
                    android:text="Start your 1st exercise"

                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/default_font_size_big" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>


    </RelativeLayout>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/permissionDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <include
            android:id="@+id/extLayout"
            layout="@layout/permission_bottom_sheet" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"

        app:itemTextAppearance="?android:attr/textAppearanceMedium"
        tools:ignore="MissingConstraints">

        <include
            android:id="@+id/tool"
            layout="@layout/nav_drawer2"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>