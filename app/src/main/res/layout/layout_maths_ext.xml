<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:minHeight="100dp"
        app:cardCornerRadius="@dimen/grid_10">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">


                <RelativeLayout
                    android:id="@+id/relative_layout_time1"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/grid_10"
                    android:layout_marginRight="@dimen/grid_10"
                    android:background="@drawable/tv_shape"
                    tools:ignore="DuplicateIds"
                    android:backgroundTint="@color/light_gray">

                    <TextView
                        android:id="@+id/timerText1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:fontFamily="@font/reemkufi_medium"
                        android:paddingHorizontal="@dimen/grid_10"
                        android:text="Time Spent"
                        android:textSize="@dimen/default_font_size"
                        tools:ignore="DuplicateIds" />

                    <LinearLayout
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerInParent="true"
                        android:layout_toEndOf="@id/timerText1"
                        android:background="@drawable/tv_shape"
                        android:backgroundTint="@color/primary"
                        android:gravity="center"
                        android:orientation="vertical">


                        <TextView
                            android:id="@+id/timeText1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/reemkufi_medium"
                            android:text="0"
                            tools:ignore="DuplicateIds"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="@dimen/default_font_size"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/timeText1"
                            android:layout_centerInParent="true"
                            android:layout_marginTop="-8dp"
                            android:fontFamily="@font/reemkufi_medium"
                            android:text="Min"
                            android:textColor="@color/white"
                            android:textSize="10sp" />

                    </LinearLayout>


                </RelativeLayout>

                <TextView
                    android:id="@+id/subSubject"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:ignore="DuplicateIds"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="@dimen/grid_20"
                    android:layout_marginTop="@dimen/grid_20"
                    android:layout_toStartOf="@+id/relative_layout_time1"
                    android:fontFamily="@font/reemkufi_medium"
                    android:text="Mathematics"
                    android:textSize="@dimen/default_font_size_big"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/chapters"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/subSubject"
                    android:layout_alignParentStart="true"
                    android:layout_marginHorizontal="@dimen/grid_20"
                    android:fontFamily="@font/reemkufi_medium"
                    tools:ignore="DuplicateIds"
                    android:text="1 digit addition"
                    android:textAlignment="textStart"
                    android:textSize="@dimen/default_font_size" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/chapters"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/reemkufi_medium"
                    android:gravity="center"
                    android:text="Status"
                    android:textSize="@dimen/default_font_size_big" />


                <TextView

                    android:id="@+id/status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/chapters"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="5dp"
                    android:layout_toEndOf="@id/subSubject"
                    android:background="@drawable/tv_shape"
                    android:backgroundTint="@color/accent"
                    android:fontFamily="@font/reemkufi_medium"
                    android:paddingHorizontal="@dimen/grid_10"
                    android:text="Incomplete"
                    tools:ignore="DuplicateIds,NotSibling,RtlCompat"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/default_font_size_small"
                    />


            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/grid_10">


                <!--            <TextView-->
                <!--                android:id="@+id/score"-->
                <!--                android:gravity="center"-->
                <!--                android:visibility="gone"-->
                <!--                android:layout_gravity="center"-->
                <!--                android:layout_width="wrap_content"-->
                <!--                android:layout_height="wrap_content"-->
                <!--                android:layout_below="@id/chapters"-->
                <!--                android:layout_centerHorizontal="true"-->
                <!--                android:backgroundTint="@color/accent"-->
                <!--                android:fontFamily="@font/reemkufi_medium"-->
                <!--                android:paddingHorizontal="@dimen/grid_10"-->
                <!--                android:text="Score :"-->
                <!--                android:textAlignment="center"-->
                <!--                android:textColor="@color/primary"-->
                <!--                android:textSize="@dimen/default_font_size_small" />-->

            </LinearLayout>


        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>