<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewCurriculum">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/parentLayout"
        android:layout_above="@id/buttonLayout"
        >
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:id="@+id/header"

                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="For Grade 1"
                        android:textColor="@color/primary"
                        android:layout_gravity="center"
                        android:textAlignment="center"
                        android:fontFamily="@font/jellee_roman"
                        android:textSize="@dimen/default_font_size_small"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="English Curriculum"
                        android:layout_gravity="center"
                        android:textAlignment="center"
                        android:fontFamily="@font/jellee_roman"
                        android:textSize="25sp"
                        />

                    <View
                        android:layout_width="80dp"
                        android:layout_height="5dp"
                        android:background="@color/yellow_"
                        android:layout_marginTop="5dp"
                        />



                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:id="@+id/choiceField"
                    android:layout_below="@id/header"
                    android:paddingVertical="@dimen/grid_1_5"
                    android:elevation="@dimen/grid_10"
                    >
                    <RadioGroup
                        android:id="@+id/radio_group"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_above="@+id/view_below"

                        android:layout_marginHorizontal="@dimen/grid_10"
                        android:checkedButton="@+id/rdb1"
                        >

                        <RadioButton
                            android:id="@+id/rdb1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:background="@drawable/radio_selector"
                            android:button="@android:color/transparent"
                            android:fontFamily="@font/jellee_roman"
                            android:paddingHorizontal="@dimen/grid_20"
                            android:text="Vocabulary"
                            android:textAlignment="center"
                            android:textColor="@color/primary" />
                        <RadioButton
                            android:id="@+id/rdb2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Spelling_CommonWords"
                            android:textAlignment="center"
                            android:paddingHorizontal="@dimen/grid_20"
                            android:button="@android:color/transparent"
                            android:background="@drawable/radio_selector"
                            android:textColor="@color/primary"
                            android:fontFamily="@font/jellee_roman"
                            android:layout_margin="5dp" />
                    </RadioGroup>


                </androidx.cardview.widget.CardView>


                <androidx.recyclerview.widget.RecyclerView
                    android:layout_below="@id/choiceField"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/contentRecyclerView"
                    android:layout_marginTop="20dp"
                    android:layout_marginHorizontal="@dimen/grid_10"

                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/choiceField"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="50dp"
                    android:orientation="vertical"
                    android:id="@+id/noDataLayout"
                    android:visibility="gone"
                    >
                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/empty_folder"

                    />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No Data Found!!"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/grid_1_5"
                        android:fontFamily="@font/jellee_roman"
                        />


                </LinearLayout>

            </RelativeLayout>
        </androidx.core.widget.NestedScrollView>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/buttonLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:elevation="@dimen/grid_10"
        android:paddingBottom="@dimen/grid_10"
        >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:layout_marginTop="@dimen/grid_1_5"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@color/primary"
        android:layout_marginHorizontal="@dimen/grid_20"
        android:layout_marginVertical="@dimen/grid_10"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start Learning"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:paddingVertical="@dimen/grid_1_5"

            android:fontFamily="@font/jellee_roman"
            android:textSize="@dimen/default_font_size_big"
            android:textColor="@color/white"
            />

    </androidx.cardview.widget.CardView>
    </LinearLayout>
</RelativeLayout>