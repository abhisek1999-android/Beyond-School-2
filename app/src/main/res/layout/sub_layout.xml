<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card"
    style="?attr/selectableItemBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/grid_10"
    app:cardCornerRadius="@dimen/grid_1"
    app:cardElevation="@dimen/grid_0_5">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/grid_10">


        <TextView
            android:id="@+id/chapterName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_gravity="center"
            android:layout_toStartOf="@+id/isLocked"
            android:layout_weight="1"
            android:fontFamily="@font/jellee_roman"
            android:gravity="left"
            android:paddingHorizontal="@dimen/grid_20"
            android:paddingVertical="@dimen/grid_1_5"
            android:textSize="@dimen/default_font_size"
            tools:text="Addition" />


        <ImageView
            android:id="@+id/isLocked"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/grid_0_5"
            android:layout_marginTop="@dimen/grid_0_5"
            android:layout_marginEnd="@dimen/grid_0_5"
            android:layout_marginBottom="@dimen/grid_0_5"
            android:background="@drawable/round_rect_button_bg"
            android:backgroundTint="@color/accent"
            android:padding="8dp"
            android:src="@drawable/ic_baseline_lock_24" />
    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>