<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    app:cardCornerRadius="@dimen/grid_10"
    android:layout_marginTop="@dimen/grid_0_5"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dp"
        tools:ignore="MissingConstraints"

        >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/closeButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/background_round"
                android:backgroundTint="@color/sweet_red"
                android:padding="@dimen/grid_0_5"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/ic_baseline_close_24"
                app:tint="@color/white" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/grid_0_5"
                android:fontFamily="@font/reemkufi_medium"
                android:text="Hint"
                android:textSize="20sp" />

        </RelativeLayout>

        <View
            android:id="@+id/indicator"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/questionView"
            android:layout_marginTop="5dp"
            android:background="@color/light_deep_grey" />
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"

            android:padding="20sp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    >

                    <TextView
                        android:backgroundTint="@color/light_gray"
                        android:padding="@dimen/grid_10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/descTextView"
                        android:text="log"
                        android:textSize="@dimen/default_font_size_big"
                        android:fontFamily="@font/reemkufi_medium"
                        android:layout_margin="5dp"
                        android:textAlignment="center"
                        />

                    <Button
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/buttonAction"
                        android:layout_gravity="center"
                        android:backgroundTint="@color/red"
                        android:layout_marginTop="@dimen/grid_10"
                        android:text="DELETE"
                        />
                    <LinearLayout
                        android:id="@+id/questionView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="30dp"
                        android:gravity="center"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/digit_one"
                            android:layout_width="wrap_content"
                            android:layout_height="55dp"
                            android:layout_gravity="center"
                            android:layout_marginRight="35dp"
                            android:background="@drawable/round_rect_button_bg"
                            android:backgroundTint="@color/primary"
                            android:fontFamily="@font/reemkufi_medium"
                            android:gravity="center"
                            android:minWidth="55dp"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:text="\?"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:visibility="gone" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/operator"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/background_round"
                            android:elevation="0dp"
                            android:maxWidth="0dp"
                            android:maxHeight="0dp"
                            android:minWidth="0dp"
                            android:minHeight="0dp"
                            android:shadowRadius="0"
                            android:text="+"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="@dimen/default_font_size_big"
                            android:textStyle="bold"
                            android:visibility="gone"/>


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="35dp"
                            android:orientation="vertical">

                            <TextView

                                android:id="@+id/digit_one_h"
                                android:layout_width="wrap_content"
                                android:layout_height="55dp"
                                android:layout_gravity="center"
                                android:layout_marginBottom="5dp"
                                android:background="@drawable/round_rect_button_bg"
                                android:backgroundTint="@color/primary"
                                android:fontFamily="@font/reemkufi_medium"
                                android:gravity="center"
                                android:minWidth="55dp"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:text="\?"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:visibility="gone" />


                            <TextView
                                android:visibility="gone"
                                android:id="@+id/digit_two"
                                android:layout_width="wrap_content"
                                android:layout_height="55dp"
                                android:layout_centerInParent="true"
                                android:layout_gravity="center"
                                android:background="@drawable/round_rect_button_bg"
                                android:backgroundTint="@color/accent"
                                android:fontFamily="@font/reemkufi_medium"
                                android:gravity="center"
                                android:minWidth="55dp"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:text="\?"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:textSize="18sp"
                                android:textStyle="bold" />


                        </LinearLayout>


                    </LinearLayout>
                    <View
                        android:id="@+id/separator"
                        android:layout_width="match_parent"
                        android:layout_height="5dp"
                        android:layout_below="@id/questionView"
                        android:layout_marginLeft="50dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="50dp"
                        android:background="@color/light_deep_grey" />


                    <LinearLayout

                        android:id="@+id/ansLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/separator"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="30dp"
                        android:gravity="center"
                        android:orientation="horizontal">




                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            >

                            <EditText
                                android:visibility="gone"
                                android:id="@+id/ansTextView2"
                                android:layout_width="wrap_content"
                                android:layout_height="55dp"
                                android:layout_centerInParent="true"
                                android:layout_gravity="center"

                                android:background="@drawable/round_rect_button_bg"
                                android:backgroundTint="@color/green"
                                android:fontFamily="@font/reemkufi_medium"
                                android:gravity="center"
                                android:minWidth="55dp"

                                android:text="\?"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:textSize="18sp"
                                android:inputType="number"
                                android:imeOptions="actionDone"
                                android:textStyle="bold" />

                            <View
                                android:visibility="invisible"
                                android:id="@+id/indicator2"
                                android:layout_width="20dp"
                                android:layout_height="5dp"
                                android:layout_below="@id/questionView"
                                android:layout_marginLeft="50dp"
                                android:layout_marginTop="1dp"
                                android:layout_marginRight="50dp"
                                android:background="@color/light_deep_grey" />

                        </LinearLayout>





                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

        </androidx.core.widget.NestedScrollView>





    </LinearLayout>

</androidx.cardview.widget.CardView>