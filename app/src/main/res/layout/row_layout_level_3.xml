<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/expandable"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/grid_1">

    <TextView
        android:id="@+id/chapters"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/reemkufi_medium"
        android:text=""
        android:textColor="@color/primary"
        android:textSize="@dimen/default_font_size_big"
        android:textStyle="bold" />


    <RelativeLayout
        android:id="@+id/relativeLayoutLearn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_view_lesson"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/image_view_lesson_lock"
            android:fontFamily="@font/reemkufi_medium"
            android:padding="@dimen/grid_1"
            android:text="Learn and Practice"
            android:textAppearance="?attr/textAppearanceBody1"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_view_enroll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_lesson"
            android:fontFamily="@font/reemkufi_medium"
            android:paddingStart="@dimen/grid_1"
            android:text="@string/enroll_to_unlock"
            tools:ignore="RtlSymmetry" />

        <ImageView
            android:id="@+id/image_view_lesson_lock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/divider_lesson"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:contentDescription="@string/blanks"
            android:src="@drawable/outline_lock_24" />

        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/divider_lesson"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_enroll"
            android:layout_marginTop="@dimen/grid_1" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayoutExercise"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_view_test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/image_view_lesson_lock_test"
            android:fontFamily="@font/reemkufi_medium"
            android:padding="@dimen/grid_1"
            android:text="Exercise"
            android:textAppearance="?attr/textAppearanceBody1"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_view_enroll_test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_test"
            android:fontFamily="@font/reemkufi_medium"
            android:paddingStart="@dimen/grid_1"
            android:text="@string/enroll_to_unlock"
            tools:ignore="RtlSymmetry" />

        <ImageView
            android:id="@+id/image_view_lesson_lock_test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/divider_lesson_test"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:contentDescription="@string/blanks"
            android:src="@drawable/outline_lock_24" />

        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/divider_lesson_test"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_enroll_test"
            android:layout_marginTop="@dimen/grid_1" />
    </RelativeLayout>
</LinearLayout>