<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Subscribe"
            android:fontFamily="@font/reemkufi_medium"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/grid_10"
            android:textSize="@dimen/default_font_size_big"
            android:layout_gravity="center"
            android:gravity="center"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/primary"
            android:layout_marginHorizontal="@dimen/grid_10"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22dp"
            android:text="Hey you don't have any subscription plan"
            android:fontFamily="@font/reemkufi_medium"
            android:layout_marginHorizontal="50dp"
            android:layout_marginTop="@dimen/grid_10"
            android:textAlignment="center"
            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/default_font_size"
            android:text="Subscribe @ Rs 199/ Month"
            android:background="@drawable/tv_shape"
            android:layout_marginVertical="@dimen/grid_10"
            android:paddingVertical="@dimen/grid_10"
            android:textAlignment="center"
            android:backgroundTint="@color/primary"
            android:textColor="@color/white"
            android:fontFamily="@font/reemkufi_medium"
            android:layout_marginHorizontal="30dp"
            />



    </LinearLayout>

</androidx.cardview.widget.CardView>