<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GradeActivity">

    <!--<TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins"
        android:gravity="center"
        android:text="Precautions"
        android:textAllCaps="true"
        android:textSize="24sp" />-->

    <com.google.android.material.button.MaterialButton
        android:id="@+id/next"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_below="@+id/card"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:drawableRight="@drawable/ic_baseline_navigate_next_24"
        android:fontFamily="@font/reemkufi_medium"
        android:shadowColor="@color/light_gray"
        android:layout_marginBottom="@dimen/grid_5d"
        android:text="Next"
        android:textAllCaps="false"
        android:textSize="@dimen/grid_20"
        android:textStyle="bold"
        app:backgroundTint="@color/primary" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="@dimen/grid_5d"
        android:padding="18dp"
        android:minHeight="200dp"
        android:paddingVertical="@dimen/grid_10"
        app:cardCornerRadius="@dimen/grid_10"
        app:cardElevation="@dimen/grid_10">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            >
            <TextView
                android:id="@+id/grade"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Add your Grade"
                android:fontFamily="@font/reemkufi_medium"
                android:textSize="@dimen/default_font_size_big"
                android:layout_marginTop="@dimen/grid_10"
                android:textStyle="bold" />


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayoutGrade"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/background_border"
                android:fontFamily="@font/poppins"
                android:padding="2dp"
                app:boxStrokeColor="@color/teal_700"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="0dp"
                app:hintEnabled="false"
                app:hintTextColor="@android:color/transparent">

                <AutoCompleteTextView
                    android:id="@+id/kidsGrade"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_border"
                    android:fontFamily="@font/reemkufi_medium"
                    android:hint="Choose Kid's Grade"
                    android:inputType="none"
                    android:padding="12dp"

                    android:textSize="@dimen/default_font_size" />
            </com.google.android.material.textfield.TextInputLayout>



        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_alignParentBottom="true"
        android:scaleType="fitXY"
        android:src="@drawable/corner_r" />


</RelativeLayout>