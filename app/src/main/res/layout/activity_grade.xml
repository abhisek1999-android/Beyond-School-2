    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_centerInParent="true"

        android:layout_marginBottom="@dimen/grid_5d"
        android:padding="18dp"
        android:minHeight="200dp"
        app:cardElevation="0dp"
        app:cardCornerRadius="@dimen/grid_10">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            >
            <TextView
                android:id="@+id/grade"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add your Grade"
                android:layout_marginHorizontal="@dimen/grid_20"
                android:fontFamily="@font/reemkufi_medium"
                android:textSize="22sp"
                android:layout_marginTop="@dimen/grid_10"
                android:textStyle="bold" />


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayoutGrade"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/background_border"
                android:fontFamily="@font/poppins"
                android:padding="2dp"
                app:boxStrokeColor="@color/teal_700"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="0dp"
                app:hintEnabled="false"
                app:hintTextColor="@android:color/transparent">

                <AutoCompleteTextView
                    android:id="@+id/kidsGrade"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_border"
                    android:fontFamily="@font/reemkufi_medium"
                    android:hint="Choose Kid's Grade"
                    android:inputType="none"
                    android:padding="12dp"

                    android:textSize="@dimen/default_font_size" />
            </com.google.android.material.textfield.TextInputLayout>



        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

<!--    <ImageView-->
<!--        android:id="@+id/imageView2"-->
