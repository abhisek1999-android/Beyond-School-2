<!--        android:scaleType="fitXY"-->
<!--        android:src="@drawable/corner_r" />-->

    <LinearLayout
        android:id="@+id/next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:elevation="@dimen/grid_10"
        android:paddingBottom="@dimen/grid_10"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            android:layout_marginTop="@dimen/grid_1_5"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/primary"
            android:layout_marginHorizontal="@dimen/grid_20"
            android:layout_marginVertical="@dimen/grid_10"
            >

            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="Next"
                android:drawableRight="@drawable/ic_baseline_navigate_next_24"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:paddingVertical="@dimen/grid_1_5"

                android:fontFamily="@font/jellee_roman"
                android:textSize="@dimen/default_font_size_big"
                android:textColor="@color/white"
                />

        </androidx.cardview.widget.CardView>
    </LinearLayout>


</RelativeLayout>