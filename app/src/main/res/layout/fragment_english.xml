<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.EnglishFragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.core.widget.NestedScrollView

            android:id="@+id/nestedScrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/startExeButtonLayout"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <LinearLayout
                android:id="@+id/completeProgressTile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/taskLayout"
                    >


                    <TextView
                        android:id="@+id/yourTask"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/yourProgressLayout"
                        android:layout_gravity="center"
                        android:fontFamily="@font/reemkufi_medium"
                        android:text="Your  Today's  Task"
                        android:textAllCaps="true"
                        android:textColor="@color/accent"
                        android:layout_marginHorizontal="@dimen/grid_20"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/grid_20"
                        android:layout_marginTop="@dimen/grid_10"
                        android:fontFamily="@font/reemkufi_medium"
                        android:text="English"
                        android:textSize="@dimen/default_font_size_big"
                        android:textStyle="bold" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/englishRecyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/grid_10" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <androidx.cardview.widget.CardView
                        android:id="@+id/yourProgressLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/toolBar"
                        android:layout_margin="@dimen/grid_10"
                        app:cardCornerRadius="@dimen/grid_20"
                        app:cardElevation="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="5dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_gravity="left"
                                android:fontFamily="@font/reemkufi_medium"
                                android:padding="5dp"
                                android:text="Progress   Report"
                                android:textStyle="bold"

                                android:textAllCaps="true"
                                android:textColor="@color/accent"
                                android:textSize="20sp" />

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/progressRecyclerView"
                                android:layout_width="match_parent"
                                android:layout_marginTop="@dimen/grid_10"
                                android:layout_height="wrap_content" />

                        </LinearLayout>


                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>

                <ImageView
                    android:id="@+id/introTile"
                    android:layout_width="match_parent"
                    android:layout_height="480dp"
                    android:src="@drawable/part_one"
                    />

                <RelativeLayout
                    android:id="@+id/evaluationTestTile"
                    android:layout_width="match_parent"
                    android:layout_height="550dp"
                    android:layout_marginHorizontal="5dp"

                    >

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/part_two" />

                    <com.google.android.material.button.MaterialButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginRight="@dimen/grid_20"
                        android:layout_marginBottom="@dimen/grid_20"
                        android:fontFamily="@font/reemkufi_medium"
                        android:text="Proceed  to evaluation test"
                        android:textAllCaps="false"
                        android:visibility="invisible"
                        app:backgroundTint="@color/primary" />
                </RelativeLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/gotoViewCurriculum_one"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/primary"
                    android:layout_marginTop="@dimen/grid_10"
                    android:layout_marginHorizontal="@dimen/grid_1_5"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="View Curriculum"
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:paddingVertical="@dimen/grid_1_5"

                        android:fontFamily="@font/jellee_roman"
                        android:textSize="@dimen/default_font_size_big"
                        android:textColor="@color/white"
                        />
                </androidx.cardview.widget.CardView>

                <ImageView
                    android:id="@+id/methodologyTile"
                    android:layout_width="match_parent"
                    android:layout_height="640dp"
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginVertical="@dimen/grid_10"
                    android:src="@drawable/part_three" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="0dp"
                    android:id="@+id/gotoViewCurriculum_two"
                    app:cardBackgroundColor="@color/primary"
                    android:layout_marginHorizontal="@dimen/grid_1_5"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="View Curriculum"
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:paddingVertical="@dimen/grid_1_5"

                        android:fontFamily="@font/jellee_roman"
                        android:textSize="@dimen/default_font_size_big"
                        android:textColor="@color/white"
                        />
                </androidx.cardview.widget.CardView>

                <ImageView
                    android:id="@+id/learnTile"
                    android:layout_width="match_parent"
                    android:layout_height="550dp"
                    android:layout_marginHorizontal="5dp"
                    android:src="@drawable/part_four" />


            </LinearLayout>
        </androidx.core.widget.NestedScrollView>


        <LinearLayout
            android:id="@+id/startExeButtonLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="1dp"
            android:background="@color/white"

            android:elevation="@dimen/grid_10"
            android:paddingBottom="@dimen/grid_10">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/grid_20"
                android:layout_marginVertical="@dimen/grid_10"
                android:layout_marginTop="@dimen/grid_1_5"
                app:cardBackgroundColor="@color/primary"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/jellee_roman"
                    android:paddingVertical="@dimen/grid_1_5"
                    android:text="Start your 1st exercise"

                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/default_font_size_big" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </RelativeLayout>
</FrameLayout>