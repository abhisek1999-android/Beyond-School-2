<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="200dp"
    android:gravity="bottom"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        app:srcCompat="@drawable/cartoon_image_1" />

    <TextView
        android:id="@+id/hiTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/reemkufi_medium"
        android:text="Hi, there"
        android:textSize="40sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select  options"
        android:layout_below="@id/hiTextView"
        android:fontFamily="@font/reemkufi_medium"
        android:textSize="20sp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="20sp"
        />
  <View
      android:layout_width="match_parent"
      android:layout_height="2dp"
      android:layout_marginLeft="2dp"
      android:layout_marginRight="2dp"
      android:layout_alignParentBottom="true"
      android:background="@color/light_deep_grey"
      />
</RelativeLayout>