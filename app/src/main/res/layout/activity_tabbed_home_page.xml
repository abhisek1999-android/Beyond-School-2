<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TabbedHomePage">


    <ImageView
        android:id="@+id/appLogo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="centerCrop"
        android:layout_marginStart="@dimen/grid_1_5"
        android:layout_marginTop="@dimen/grid_1_5"
        android:layout_marginEnd="@dimen/grid_1_5"
        android:layout_marginBottom="@dimen/grid_1_5"
        android:src="@drawable/app_logo_v2_tp" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:tabIndicatorColor="@color/primary"
        app:tabTextColor="@color/primary"
        app:tabTextAppearance="@style/tab_text"
        android:layout_marginLeft="@dimen/grid_1_5"
        app:tabMinWidth="100dp"
        android:layout_toEndOf="@id/appLogo"
        android:layout_marginTop="15dp">
    </com.google.android.material.tabs.TabLayout>
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager"
        android:layout_below="@id/appLogo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toBottomOf="@id/tabLayout"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"/>

</RelativeLayout>