<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".signin_methods.PhoneNumberLogin">





    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-30dp"
        android:src="@drawable/corner_r" />


    <TextView
        android:id="@+id/headerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter OTP"
        android:fontFamily="@font/reemkufi_medium"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="50dp"
        />

    <LinearLayout
        android:layout_below="@id/headerText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical">


    <!--Edittext for getting otp from user-->

        <LinearLayout
            android:id="@+id/otpLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/otpTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/idEdtOtp"
                android:layout_marginHorizontal="@dimen/grid_20"
                android:layout_marginTop="50dp"
                android:fontFamily="@font/reemkufi_medium"
                android:text=""
                android:visibility="gone"
                android:textSize="@dimen/default_font_size"

                />

            <in.aabhasjindal.otptextview.OtpTextView
                android:id="@+id/idEdtOtp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/grid_20"
                app:height="50dp"
                app:width="50dp"
                app:bar_enabled="false"
                app:otp_box_background_active="@drawable/background_border"
                app:otp_box_background="@drawable/background_border_gray"
                app:bar_height="2dp"
                app:length="6"
                app:otp=""
                android:layout_gravity="center"
                app:otp_text_size="24dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/timer"
                android:text="timer"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/reemkufi_medium"
                android:textColor="@color/primary"
                android:layout_gravity="center"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/resendOtp"
                android:text="Resend OTP"
                android:layout_marginTop="5dp"
                android:textColor="@color/primary"
                android:layout_gravity="center"
                android:fontFamily="@font/reemkufi_medium"
                android:visibility="gone"
                />
            <!--button for verifying user OTP-->
            <Button
                android:id="@+id/idBtnVerify"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/idEdtOtp"
                android:layout_marginHorizontal="35dp"
                android:layout_gravity="right"
                android:text="Verify OTP"
                android:backgroundTint="@color/primary"
                android:padding="@dimen/grid_10"
                android:fontFamily="@font/reemkufi_medium"
                android:textAllCaps="false" />


        </LinearLayout>
    </LinearLayout>


</RelativeLayout>