<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BEYOND_SCHOOL" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/teal_200</item>
        <item name="colorPrimaryVariant">@color/teal_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorOnPrimary</item>

        <!-- Customize your theme here. -->
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
    </style>


    <style name="card_background" parent="CardView">

        <item name="cardBackgroundColor">@color/tp_white</item>

    </style>

    <style name="card_bg" parent="CardView.Light">
        <item name="cardBackgroundColor">@color/light_gray</item>
    </style>

    <style name="background" parent="CardView">

        <item name="backgroundColor">@color/tp_white</item>

    </style>

    <style name="Theme.BEYOND_SCHOOL.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/home_bg</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <style name="LoginTheme" parent="FirebaseUI">
        <item name="colorPrimary">@color/teal_200</item>
        <item name="colorPrimaryVariant">@color/teal_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorOnPrimary</item>

        <!-- Customize your theme here. -->
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/splash_ui</item>
        <item name="android:textColorHint">@color/sweet_grey</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="Theme.BEYOND_SCHOOL.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.BEYOND_SCHOOL.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="PickerTheme">
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/poppins</item>
    </style>

    <style name="Theme.BEYOND_SCHOOL.Fullscreen" parent="Theme.BEYOND_SCHOOL">
        <item name="android:actionBarStyle">@style/Widget.Theme.BEYOND_SCHOOL.ActionBar.Fullscreen
        </item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.BEYOND_SCHOOL.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>
</resources>