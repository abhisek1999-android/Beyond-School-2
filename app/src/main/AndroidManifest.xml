<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.maths.beyond_school_280720220930">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WAKE_LOCK"/>



    <queries> <package android:name="com.google.android.googlequicksearchbox"/> </queries>
    <application
        android:allowBackup="true"
        android:icon="@drawable/logo_final"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo_final"
        android:supportsRtl="true"
        android:theme="@style/Theme.BEYOND_SCHOOL"
        >

        <activity android:name="com.maths.beyond_school_280720220930.SplashScreen"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.maths.beyond_school_280720220930.Random_questions"
            android:exported="true" />
        <activity
            android:name="com.maths.beyond_school_280720220930.TestActivity"
            android:exported="true" />
        <activity
            android:name="com.maths.beyond_school_280720220930.select_action"
            android:exported="true" />
        <activity
            android:name="com.maths.beyond_school_280720220930.table_questions"
            android:exported="true"
            android:showOnLockScreen="true"
            />
        <activity
            android:name="com.maths.beyond_school_280720220930.table_with_hint"
            android:exported="true"
            android:showOnLockScreen="true" />
        <activity
            android:name="com.maths.beyond_school_280720220930.MainActivity"
            android:exported="true"
            android:showOnLockScreen="true"
            >

        </activity>


        <service android:name="com.maths.beyond_school_280720220930.ClearService" android:stopWithTask="false" />

    </application>

    <queries>
        <intent>
            <action
                android:name="android.speech.RecognitionService"/>
        </intent>
    </queries>


    <queries>
        <intent>
            <action android:name="android.intent.action.TTS_SERVICE" />
        </intent>
    </queries>
</manifest>