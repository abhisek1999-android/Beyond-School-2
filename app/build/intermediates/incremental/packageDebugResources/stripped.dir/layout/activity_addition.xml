<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AdditionActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            android:id="@+id/toolBar"
            layout="@layout/tool_bar_layout_back_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"

                android:visibility="gone"
                android:layout_marginRight="10dp"
                android:background="@drawable/background_fill"
                android:orientation="horizontal">

                <ProgressBar
                    android:id="@+id/questionProgress"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_alignParentBottom="true"

                    android:layout_weight="1"
                    android:progressDrawable="@drawable/custom_progress_bg" />


            </LinearLayout>

            <TextView
                android:id="@+id/textView22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:fontFamily="@font/reemkufi_medium"
                android:text="0/10"
                android:textSize="20sp"
                android:visibility="gone"
                android:textStyle="bold" />
        </RelativeLayout>

        <TextView
            android:id="@+id/textView23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="98dp"
            android:fontFamily="@font/poppins"
            android:text="Practice Table"
            android:textSize="25sp"
            android:textStyle="bold"
            android:visibility="gone"
            app:layout_constraintVertical_bias="0.027" />

        <ImageView
            android:id="@+id/imageViewBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/background_round"
            android:padding="5dp"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_baseline_arrow_back_24" />


        <RelativeLayout
            android:id="@+id/questionLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp">

            <TextView
                android:id="@+id/progress"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/half_round_rect"
                android:fontFamily="@font/reemkufi_medium"
                android:padding="10dp"
                android:text="1/10"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/ShowTable"
                style="@style/card_background"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                app:cardElevation="0dp"
                android:layout_marginTop="-5dp"
                android:layout_below="@id/progress"
                app:layout_gravity="fill"
                app:layout_rowWeight="1">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/one_third_round_rect"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/questionView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="50dp"
                        android:gravity="center"
                        android:layout_centerHorizontal="true"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/digit_one"
                            android:layout_width="wrap_content"
                            android:layout_height="60dp"
                            android:layout_gravity="center"
                            android:layout_marginRight="30dp"
                            android:background="@drawable/round_rect_button_bg"
                            android:backgroundTint="@color/primary"
                            android:fontFamily="@font/reemkufi_medium"
                            android:minWidth="60dp"
                            android:paddingLeft="10dp"
                            android:paddingTop="@dimen/grid_0_5"
                            android:paddingRight="10dp"
                            android:text="00"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="30sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/operator"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/background_round"
                            android:backgroundTint="@color/blue"
                            android:gravity="center"
                            android:text="+"
                            android:fontFamily="@font/poppins"
                            android:textColor="@color/white"
                            android:textSize="30sp"

                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/digit_two"
                            android:layout_width="wrap_content"
                            android:layout_height="60dp"
                            android:layout_centerInParent="true"
                            android:layout_gravity="center"
                            android:layout_marginLeft="30dp"
                            android:background="@drawable/round_rect_button_bg"
                            android:backgroundTint="@color/accent"
                            android:fontFamily="@font/reemkufi_medium"
                            android:minWidth="60dp"
                            android:paddingLeft="10dp"
                            android:paddingTop="@dimen/grid_0_5"
                            android:paddingRight="10dp"
                            android:text="00"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="30sp"
                            android:textStyle="bold" />


                    </LinearLayout>

                    <View
                        android:id="@+id/separator"
                        android:layout_width="match_parent"
                        android:layout_height="5dp"
                        android:layout_below="@id/questionView"
                        android:layout_marginLeft="50dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="50dp"
                        android:background="@color/light_deep_grey" />




                    <LinearLayout

                        android:layout_below="@id/separator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:layout_centerHorizontal="true"
                        android:orientation="horizontal">


                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="60dp"
                            android:layout_gravity="center"
                            android:layout_marginRight="30dp"
                            android:background="@drawable/round_rect_button_bg"
                            android:backgroundTint="@color/primary"
                            android:fontFamily="@font/reemkufi_medium"
                            android:minWidth="60dp"
                            android:paddingLeft="10dp"
                            android:paddingTop="@dimen/grid_0_5"
                            android:paddingRight="10dp"
                            android:text="00"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="30sp"
                            android:visibility="invisible"
                            android:textStyle="bold" />

                        <TextView

                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"

                            android:visibility="invisible"
                            android:background="@drawable/background_round"
                            android:backgroundTint="@color/blue"
                            android:gravity="center"
                            android:text="+"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="30sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/ansTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="60dp"
                            android:layout_below="@id/separator"
                            android:layout_alignParentRight="true"
                            android:background="@drawable/round_rect_button_bg"
                            android:backgroundTint="@color/green"
                            android:fontFamily="@font/reemkufi_medium"
                            android:gravity="center"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:text="\?"
                            android:layout_marginLeft="30dp"
                            android:minWidth="60dp"
                            android:textColor="@color/white"
                            android:textSize="30sp"
                            android:textStyle="bold" />


                    </LinearLayout>


                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/animationVoice"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginBottom="5dp"
                        app:lottie_autoPlay="true"
                        app:lottie_loop="true"
                        app:lottie_rawRes="@raw/green_blinking_dott"
                        tools:ignore="MissingConstraints" />


                </RelativeLayout>

            </androidx.cardview.widget.CardView>
        </RelativeLayout>


        <ToggleButton
            android:id="@+id/playPause"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/round_rect_button_bg"
            android:backgroundTint="@color/primary"
            android:drawableTop="@drawable/play_button"
            android:foreground="?android:attr/selectableItemBackground"
            android:paddingTop="15dp"
            android:text=""
            android:textOff=""
            android:textOn=""
       />


        <TextView
            android:id="@+id/tapInfoTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/reemkufi_medium"
            android:text="Tap this button to Start"
            android:textSize="20sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@+id/animationVoice"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">


        </LinearLayout>


    </LinearLayout>


    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:background="@drawable/half_round_rect"
        android:fontFamily="@font/reemkufi_medium"
        android:padding="10dp"
        android:text="Score"
        android:textAlignment="center"
        android:layout_above="@id/score"
        android:textColor="@color/white"
        android:textSize="18sp" />


    <ImageView
        android:layout_width="140dp"
        android:layout_height="150dp"
        android:layout_marginBottom="-10dp"
        android:src="@drawable/character_teacher"
        android:layout_above="@id/score"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"


        />
    <LinearLayout
        android:id="@+id/score"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/one_third_round_rect"
        android:backgroundTint="@color/red"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"


            >

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="40dp"
                app:cardBackgroundColor="@color/transparent"
                app:cardElevation="0dp">

                <TextView
                    android:id="@+id/wrongText"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/reemkufi_medium"
                    android:gravity="center"
                    android:text="00"
                    android:textColor="@color/white"
                    android:textSize="35sp"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/layout_set"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/round_rect_button_bg"
                android:backgroundTint="@color/green"
                android:gravity="center">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="40dp"
                    app:cardBackgroundColor="@color/transparent"
                    app:cardElevation="0dp">

                    <TextView
                        android:id="@+id/correctText"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/reemkufi_medium"
                        android:gravity="center"
                        android:text="00"
                        android:textColor="@color/white"
                        android:textSize="35sp"
                        android:textStyle="bold" />
                </androidx.cardview.widget.CardView>

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar1"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/dialPadLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="1dp">

        <include layout="@layout/log_bottom_sheet" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</RelativeLayout>