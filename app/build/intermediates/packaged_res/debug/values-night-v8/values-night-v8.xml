<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:ns1="http://schemas.android.com/tools">
    <style name="LoginTheme" parent="FirebaseUI">
        <item name="colorPrimary">@color/teal_200</item>
        <item name="colorPrimaryVariant">@color/teal_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" ns1:targetApi="l">?attr/colorOnSecondary</item>

        <!-- Customize your theme here. -->
        <item name="android:windowLightStatusBar" ns1:ignore="NewApi">true</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/splash_night</item>
        <item name="android:textColorHint">@color/sweet_grey</item>
    </style>
    <style name="Theme.BEYOND_SCHOOL" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/teal_200</item>
        <item name="colorPrimaryVariant">@color/teal_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" ns1:targetApi="l">?attr/colorOnSecondary</item>
        <!-- Customize your theme here. -->

    </style>
    <style name="background" parent="CardView">

        <item name="backgroundColor">@color/black</item>

    </style>
    <style name="card_background" parent="CardView">

        <item name="cardBackgroundColor">@color/tp_black</item>

    </style>
    <style name="card_bg" parent="CardView.Light">
        <item name="cardBackgroundColor">@color/sweet_dark</item>
    </style>
</resources>