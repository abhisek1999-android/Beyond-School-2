<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DashBoardActivity">

    <include
        android:id="@+id/toolBar"
        layout="@layout/tool_bar_layout_back_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolBar"
        >





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text=" Question Answered"
            android:fontFamily="@font/reemkufi_medium"
            android:textSize="18sp"
            />

        <TextView
            android:id="@+id/totalQuestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="300"
            android:fontFamily="@font/reemkufi_medium"
            android:textSize="50sp"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/totalRight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="30\nRight"
                android:layout_margin="10dp"
                android:textAlignment="center"
                android:fontFamily="@font/reemkufi_medium"
                android:textSize="18sp"
                android:padding="10dp"
                />

            <TextView
                android:id="@+id/totalWrong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="30\nWrong"
                android:textAlignment="center"
                android:fontFamily="@font/reemkufi_medium"
                android:textSize="18sp"
                android:padding="10dp"
                android:layout_margin="10dp"
                />

        </LinearLayout>


    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/barChart"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_margin="10dp"
         />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:fontFamily="@font/reemkufi_medium"
                android:text="Today's Progress"
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                >

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    >

                    <ProgressBar
                        android:id="@+id/tProgressResult"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="198dp"
                        android:layout_height="190dp"
                        android:layout_gravity="center|top"
                        android:indeterminate="false"

                        android:progressDrawable="@drawable/roundbar" />


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_centerInParent="true"
                        >
                        <TextView
                            android:id="@+id/tQuestions"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_gravity="center"
                            android:fontFamily="@font/reemkufi_medium"
                            android:text="00"
                            android:textAlignment="center"
                            android:textSize="30sp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/reemkufi_medium"
                            android:text="Total"
                            android:textAlignment="center"
                            android:textSize="18sp" />
                    </LinearLayout>





                </RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    >

                    <TextView
                        android:id="@+id/tCorrect"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:fontFamily="@font/reemkufi_medium"
                        android:text="00"
                        android:textSize="30sp"
                        />
                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:fontFamily="@font/reemkufi_medium"
                        android:text="Correct"
                        android:textSize="20sp"
                        />

                    <TextView
                        android:id="@+id/tWrong"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:fontFamily="@font/reemkufi_medium"
                        android:text="00"
                        android:textSize="30sp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:fontFamily="@font/reemkufi_medium"
                        android:text="Wrong"
                        android:textSize="20sp"
                        />


                </LinearLayout>
            </LinearLayout>



        </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/progressDetails"
            android:layout_below="@id/barChart"
            android:text="Your  progress reports"
            android:fontFamily="@font/reemkufi_medium"
            android:textSize="20sp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/filterBy"
            android:layout_below="@id/barChart"
            android:text="Filter"
            android:fontFamily="@font/reemkufi_medium"
            android:textSize="20sp"
            android:padding="5dp"
            android:drawableLeft="@drawable/ic_baseline_filter_alt_24"
            android:layout_margin="10dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_weight="1.5"
            android:textAlignment="center"
            />

    </LinearLayout>


        <TextView
            android:id="@+id/noDataText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No Data Available"
            android:fontFamily="@font/reemkufi_medium"
            android:layout_gravity="center"
            android:layout_marginTop="20sp"
            android:textSize="20sp"
            android:visibility="gone"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/progressReport"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>